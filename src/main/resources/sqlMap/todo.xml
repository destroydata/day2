<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="todo">
    <select id="findAll" resultType="TodoJoinUser">
        select
            t.id,
            t.create_at,
            t.content,
            t.checked,
            u.name,
            u.id uid,
            t.heart
        from todos as t
        inner join users as u
        on t.user_id = u.id
    </select>
    <select id="findByKeyword" resultType="TodoJoinUser" parameterType="String">
        select
        t.id,
        t.create_at,
        t.content,
        t.checked,
        u.name,
        u.id uid,
        t.heart
        from todos as t
        inner join users as u
        on t.user_id = u.id
        where content like #{keyword}
    </select>
<!--    전체 게시글의 좋아요 갯수를 리스트로 나열해라 -> 전체 조회 -->
    <select id="findAllHearts" resultType="TodoJoinUser" >
        select
        t.id,
        t.user_id,
        t.create_at,
        t.content,
        t.checked,
        t.heart
        h.heart_count
        from todos as t
        left join (
        select tid, count(*) as heart_count
        from hearts
        group by tid
        ) h on t.id = h.tid;
    </select>

<!--    내가 좋아요를 눌렀으면 1이 나오고 안눌렀으면 0이 나온다 -->

    <select id="findTodoById" resultType="int">
<!--        result 값을 구하는 쿼리 -->
        select count(*) from hearts where tid = #{tid} and uid = #{uid};
    </select>
<!--    내가 게시글에 좋아요를 누르면 +1 이미 눌렀던 게시글을 한번 더 누르면 -1 -->

